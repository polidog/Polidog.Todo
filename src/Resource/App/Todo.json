{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Todo schema",
  "description": "Todo schema that should be used to model todo application.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40
    },
    "status": {
      "enum": [1, 2]
    },
    "created": {
      "type": "string",
      "format": "date"
    },
    "updated": {
      "type": "string",
      "format": "date"
    }
  },
  "required": ["title", "status", "created", "updated"],
  "additionalProperties": false
}
