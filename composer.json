{
    "name": "polidog/todo",
    "type": "project",
    "description": "",
    "license": "proprietary",
    "require": {
        "php": "~7.0",
        "roave/security-advisories": "dev-master",
        "bear/package": "~1.1",
        "josegonzalez/dotenv": "~2.0",
        "madapaja/twig-module": "^1.1",
        "ray/aura-sql-module": "~1.0",
        "ray/web-form-module": "^0.5.4",
        "koriym/now": "^1.0",
        "koriym/query-locator": "^1.3",
        "koriym/http-constants": "^1.0.1"
    },
    "require-dev": {
        "composer/composer": "~1.0",
        "phpunit/phpunit": "~4.8 || ~5.2",
        "squizlabs/php_codesniffer": "~2.5",
        "phpmd/phpmd": "~2.3",
        "friendsofphp/php-cs-fixer": "^2.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Polidog\\Todo\\": "src/"
        }
    },
    "scripts": {
        "test": [
            "composer clean",
            "phpmd src text ./phpmd.xml",
            "phpcs src tests",
            "php-cs-fixer fix --dry-run -v",
            "phpunit"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v"
        ],
        "clean": "rm -rf var/tmp/* var/log/* tests/tmp/*",
        "serve": "php -S 127.0.0.1:8080 -t var/www",
        "api": "php bootstrap/api",
        "web": "php bootstrap/web"
    }
}
